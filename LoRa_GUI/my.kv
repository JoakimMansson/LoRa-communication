        GridLayout:
            size: root.width, root.height
            pos_hint: {"x": 0.4}
            row_force_default: True
            row_default_height: 80
            padding: ["50sp", "200sp"]
            cols: 1
            rows: 2

#------------------ MC ERRORFLAGS -------------------#

            Label:
                text: "MC_Error_Flags"
                font_size: "30sp"
                bold: True


    #------------------ MC LIMITFLAGS -------------------#

            Label:
                text: "MC_Limit_Flags"
                font_size: "30sp"
                bold: True




            
            
        



        Image:
            source: "HUST_logo.png"
            pos_hint: {"x": 0, "y": 0.8}
            size_hint: (1.0, 0.17)



        





